{
  "compilerOptions": {
    "target": "es5",  // 指定要使用的默认库，值为"es3","es5","es2015"...
    "module": "commonjs",
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "checkJs": false, // 启用javascript文件的类型检
    "baseUrl": ".", // 用于解析非相对模块名称的基目录
    "paths": { // 指定相对于baseUrl选项计算的路径映射。
      "@/*":["src/*"]
    }
  },
  "exclude": [ // 要排除的文件
    "dist",
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [ // 包含的文件
      "src/**/*"
  ]
}
